<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@color/screenBackground">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello_world_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3"
            android:layout_marginRight="1dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Small"
            app:fontFamily="sans-serif"
            android:textColor="@android:color/white"
            android:id="@+id/textView" android:textSize="72sp"
    />
    <Button
            android:text="Random"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rightButton"
            android:onClick="randomMe"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="70dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:background="@color/buttonBackground"
    />
    <Button
            android:text="Count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/middleButton" app:layout_constraintEnd_toStartOf="@+id/rightButton"
            android:onClick="countMe"
            app:layout_constraintStart_toEndOf="@+id/leftButton"
            android:layout_marginTop="70dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.493"
            android:background="@color/buttonBackground" android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp" android:layout_marginEnd="5dp" android:layout_marginRight="5dp"/>

    <Button
            android:text="Toast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/leftButton"
            android:onClick="toastMe"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="70dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginEnd="5dp" android:layout_marginRight="5dp"
            android:background="@color/buttonBackground"/>

</android.support.constraint.ConstraintLayout>